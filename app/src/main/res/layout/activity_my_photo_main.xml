<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hksystems.myphotoapp.MyPhotoMainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TakePhotoTextLabel"
        android:id="@+id/takePhotoButton"
        android:onClick="launchCamera"
        android:layout_below="@+id/myPhotoAppImageView"
        android:layout_alignStart="@+id/myPhotoAppImageView"
        android:layout_marginTop="36dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myPhotoAppImageView"
        android:minHeight="300dp"
        android:minWidth="300dp"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ebd8d8"
        android:maxHeight="300dp"
        android:maxWidth="300dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ChooseFromGalleryLabel"
        android:id="@+id/chooseFromGallery"
        android:layout_alignTop="@+id/takePhotoButton"
        android:layout_alignEnd="@+id/myPhotoAppImageView"
        android:onClick="chooseFromGallery"/>
</RelativeLayout>
